{
  "name": "ounce-tracker",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter web dev & bun run --filter api dev & bun run --filter worker dev & bun run --filter admin dev",
    "dev:web": "cd apps/web && bun dev",
    "dev:admin": "cd apps/admin && bun dev",
    "dev:api": "cd apps/api && bun dev",
    "dev:worker": "cd apps/worker && bun dev",
    "build": "bun run --filter shared build && bun run --filter web build && bun run --filter api build && bun run --filter worker build",
    "build:web": "cd apps/web && bun run build",
    "build:api": "cd apps/api && bun run build",
    "build:worker": "cd apps/worker && bun run build",
    "lint": "eslint apps packages --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "test": "bun test",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/*/.next apps/*/dist packages/*/dist"
  },
  "devDependencies": {
    "@types/bun": "^1.1.12",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
